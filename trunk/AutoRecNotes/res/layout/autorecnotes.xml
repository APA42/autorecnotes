<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal|center_vertical"
    	android:layout_marginTop="2sp">
	    <ProgressBar 
	    	android:id="@+id/progressBarHorizontal" 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	style="?android:attr/progressBarStyleHorizontal"
	    	android:visibility="invisible"
	    	android:clickable="false"
	    	android:layout_gravity="center_horizontal|center_vertical"> 
	    </ProgressBar>
	</LinearLayout>
    <LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal|center_vertical"
    	android:layout_marginTop="4sp">
    	<Button
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:id="@+id/btn_StartRecording"
    		android:text="@string/txt_btn_StartRecordNote">
		</Button>
	</LinearLayout>
	<LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal|center_vertical"
    	android:layout_marginTop="4sp">
		<Button
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:id="@+id/btn_StopRecording"
    		android:text="@string/txt_btn_StopRecordNote">
		</Button>
	</LinearLayout>
	<LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal|center_vertical"
    	android:layout_marginTop="4sp">
    	<Button
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:id="@+id/btn_ManageRecorderNotes"
    		android:text="@string/txt_btn_ManageRecorderNotes">
		</Button>
    			
    </LinearLayout>
</LinearLayout>